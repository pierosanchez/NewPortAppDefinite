<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.eventsgallery.PhotoComentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/prgSendPhoto"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/newport_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <!--<EditText
                android:id="@+id/txtComent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/introduce_coment"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"/>-->

            <android.support.text.emoji.widget.EmojiEditText
                android:id="@+id/txtComent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/introduce_coment"
                android:inputType="text"
                android:maxLines="1"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/sendImageButton"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="@drawable/send_img_btn" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>