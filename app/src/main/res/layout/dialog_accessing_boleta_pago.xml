<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/btnClosePopUp"
            android:gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="X"
            android:textColor="@android:color/white"
            android:background="@drawable/yellow_square_button"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_ing_contra_boleta_pago" />

        <EditText
            android:id="@+id/txtPasswordUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnAccessBoletaPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/yellow_square_button"
            android:text="@string/btn_aceptar"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>