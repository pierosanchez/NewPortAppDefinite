<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mundialevent.MundialEventActivity">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/prgMundial"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp">

            <TextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:text="@string/mundial_event_fragment" />

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nstScrollProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgBannerError"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/banner_error"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/generalContainerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:text="@string/winner_label"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:text="@string/empate_label"
                            android:textSize="9sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/winner_label"
                            android:textSize="9sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/partido1Layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group1Country1Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group1Country1Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <RadioGroup
                                    android:id="@+id/rdgrpPartido1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/group1Country1Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group1EmpateCheckbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group1Country2Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </RadioGroup>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group1Country2Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group1Country2Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </TableRow>

                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/partido2Layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group2Country1Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group2Country1Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <RadioGroup
                                    android:id="@+id/rdgrpPartido2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/group2Country1Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group2EmpateCheckbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group2Country2Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </RadioGroup>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group2Country2Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group2Country2Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </TableRow>

                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/partido3Layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group3Country1Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group3Country1Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <RadioGroup
                                    android:id="@+id/rdgrpPartido3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/group3Country1Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group3EmpateCheckbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group3Country2Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </RadioGroup>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group3Country2Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group3Country2Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </TableRow>

                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/partido4Layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group4Country1Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group4Country1Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                                <RadioGroup
                                    android:id="@+id/rdgrpPartido4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/group4Country1Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group4EmpateCheckbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp" />

                                    <RadioButton
                                        android:id="@+id/group4Country2Checkbox"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </RadioGroup>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/group4Country2Image"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/newport_gray" />

                                    <TextView
                                        android:id="@+id/group4Country2Label"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Cargando..."
                                        android:textSize="11sp" />

                                </LinearLayout>

                            </TableRow>

                        </TableLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/yellow_square_button"
                        android:text="@string/save_desition_button"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSeeStatusMundial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/yellow_square_button"
                    android:text="@string/status_mundial_rank"
                    android:textColor="@android:color/white"
                    android:visibility="gone"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>